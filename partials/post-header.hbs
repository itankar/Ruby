<header class="post-header">
    <{{tag}} class="post-title">
        {{#unless hide_link}}
            <a class="post-title-link" href="{{url}}">{{title}}</a>
        {{else}}
            {{title}}
        {{/unless}}
    </{{tag}}>
    {{#if show_date}}
        {{> post-date}}
    {{/if}}
</header>
